# ========================================
# FOOD DELIVERY APP - ORDER SERVICE
# Environment Configuration Example
# ========================================

# MongoDB Configuration (Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-name>.abc123.mongodb.net/<database-name>?retryWrites=true&w=majority

# Local MongoDB Alternative
# MONGODB_URI=mongodb://localhost:27017/order_service

# Application Settings
PORT=3000
NODE_ENV=development|production|test

# Authentication
JWT_SECRET=your_32_character_long_jwt_secret_here
JWT_EXPIRES_IN=1d  # 1 day expiration

# Message Queue (RabbitMQ)
RABBITMQ_URL=amqp://<rabbit_user>:<rabbit_password>@rabbitmq:5672

# Service Discovery (Docker/K8s service names)
AUTH_SERVICE_URL=http://auth-service:3001
RESTAURANT_SERVICE_URL=http://restaurant-service:3002
PAYMENT_SERVICE_URL=http://payment-service:3003
DELIVERY_SERVICE_URL=http://delivery-service:3004
NOTIFICATION_SERVICE_URL=http://notification-service:3005

# Logging
LOG_LEVEL=debug|info|warn|error
LOG_TO_FILE=true|false

# Rate Limiting (requests per minute)
RATE_LIMIT_WINDOW=1m
RATE_LIMIT_MAX=100

# ========================================
# DO NOT COMMIT ACTUAL CREDENTIALS TO GIT
# ========================================